                <GridView Background="Black" 
              ItemsSource="{Binding Source={StaticResource AddressGroups}, Path=CollectionGroups}"
              ItemTemplate="{StaticResource AddrBookJumpTemplate}">
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom-->

