                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" Margin="20,0,0,0" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource FlickrAlbumListGroupTemplate}"/>
                    </ListView.GroupStyle>
                </ListView>
            <!--/SemanticZoom.ZoomedInView>
